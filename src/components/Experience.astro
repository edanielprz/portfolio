---
const experience = [
  {
    role: "Senior Data Analyst",
    company: "Company A",
    period: "2021 - Present",
    description: "Led the migration of reporting systems to Power BI, reducing manual reporting time by 40%. Implemented store clustering algorithms."
  },
  {
    role: "Data Analyst",
    company: "Company B",
    period: "2019 - 2021",
    description: "Developed efficiency dashboards for operational teams. Conducted A/B testing on marketing campaigns."
  },
  {
    role: "Junior Analyst",
    company: "Company C",
    period: "2018 - 2019",
    description: "Assisted in data cleaning and SQL database maintenance. Created weekly performance reports in Excel."
  }
];

const education = [
    {
        degree: "B.S. Statistics",
        school: "University Name",
        period: "2014 - 2018"
    }
];
---

<section id="experience" class="section">
  <h2 class="section-title">Experience & Education</h2>
  
  <div class="timeline">
    {experience.map(item => (
      <div class="timeline-item">
        <div class="timeline-marker"></div>
        <div class="timeline-content">
          <h3 class="role">{item.role}</h3>
          <span class="company">{item.company} | {item.period}</span>
          <p class="description">{item.description}</p>
        </div>
      </div>
    ))}

    {education.map(item => (
        <div class="timeline-item education">
            <div class="timeline-marker"></div>
            <div class="timeline-content">
                <h3 class="role">{item.degree}</h3>
                <span class="company">{item.school} | {item.period}</span>
            </div>
        </div>
    ))}
  </div>
</section>

<style>
  .section {
    padding: var(--spacing-lg) 0;
  }

  .section-title {
     margin-bottom: var(--spacing-lg);
  }

  .timeline {
    position: relative;
    padding-left: 2rem;
    border-left: 2px solid var(--color-border);
  }

  .timeline-item {
    position: relative;
    margin-bottom: var(--spacing-lg);
  }

  .timeline-marker {
    position: absolute;
    left: -2.35rem; /* Adjust to center on line */
    top: 0;
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    background-color: var(--color-bg);
    border: 2px solid var(--color-primary);
  }

  .timeline-content {
    padding-left: var(--spacing-sm);
  }

  .role {
    font-size: 1.25rem;
    margin-bottom: 0.25rem;
    color: var(--color-text-main);
  }

  .company {
    display: block;
    font-size: 0.9rem;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-sm);
    font-weight: 600;
  }

  .description {
    color: var(--color-text-muted);
  }
</style>
