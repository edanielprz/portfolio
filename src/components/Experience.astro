---

<section id="experience" class="section">
  <h2 class="section-title">Experience</h2>
  
  <div class="timeline">
    {experience.map(item => (
      <div class="timeline-item">
        <div class="timeline-marker"></div>
        <div class="timeline-content">
          <h3 class="role">{item.role}</h3>
          <span class="company">{item.company} | {item.period}</span>
          <ul class="responsibilities">
            {item.responsibilities.map(r => <li>{r}</li>)}
          </ul>
          {item.skills && (
              <div class="skills-tags">
                {item.skills.map(skill => <span class="tag">{skill}</span>)}
              </div>
          )}
        </div>
      </div>
    ))}
  </div>

  <h2 class="section-title">Education</h2>
  <div class="timeline">
    {education.map(item => (
        <div class="timeline-item education">
            <div class="timeline-marker"></div>
            <div class="timeline-content">
                <h3 class="role">{item.degree}</h3>
                <span class="company">{item.school} | {item.period}</span>
            </div>
        </div>
    ))}
  </div>

  <h2 class="section-title">Certifications</h2>
  <div class="cert-grid">
     {certifications.map(cert => (
        <div class="cert-card">
            <h3>{cert.name}</h3>
            <p class="issuer">{cert.issuer} | {cert.date}</p>
            {cert.details && <p class="details">{cert.details}</p>}
        </div>
     ))}
  </div>
</section>

<style>
  .section {
    padding: var(--spacing-lg) 0;
  }

  .section-title {
     margin-bottom: var(--spacing-lg);
     margin-top: var(--spacing-lg);
     font-size: 1.8rem;
     color: #1a202c;
  }
  
  .section-title:first-of-type {
      margin-top: 0;
  }

  .timeline {
    position: relative;
    padding-left: 2rem;
    border-left: 2px solid var(--color-border);
  }

  .timeline-item {
    position: relative;
    margin-bottom: var(--spacing-lg);
  }

  .timeline-marker {
    position: absolute;
    left: -2.35rem; /* Adjust to center on line */
    top: 0.25rem;
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    background-color: var(--color-bg);
    border: 2px solid var(--color-primary);
  }

  .timeline-content {
    padding-left: var(--spacing-sm);
  }

  .role {
    font-size: 1.25rem;
    margin-bottom: 0.25rem;
    color: var(--color-text-main);
  }

  .company {
    display: block;
    font-size: 0.9rem;
    color: var(--color-text-muted);
    margin-bottom: var(--spacing-sm);
    font-weight: 600;
  }

  .responsibilities {
    list-style-type: disc;
    padding-left: 1.2rem;
    margin-bottom: var(--spacing-sm);
    color: var(--color-text-muted);
  }
  
  .responsibilities li {
      margin-bottom: 0.25rem;
  }
  
  .skills-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-top: 0.5rem;
  }
  
  .tag {
      background-color: var(--color-bg-secondary);
      color: var(--color-text-muted);
      font-size: 0.75rem;
      padding: 2px 8px;
      border-radius: 4px;
  }

  /* Certification Grid */
  .cert-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: var(--spacing-md);
  }
  
  .cert-card {
      background: var(--color-bg-secondary);
      padding: var(--spacing-md);
      border-radius: 8px;
      border: 1px solid var(--color-border);
  }
  
  .cert-card h3 {
      font-size: 1.1rem;
      margin-bottom: 0.25rem;
  }
  
  .issuer {
      font-size: 0.85rem;
      color: var(--color-text-muted);
      font-weight: 600;
      margin-bottom: 0.5rem;
  }
  
  .details {
      font-size: 0.9rem;
      color: var(--color-text-muted);
  }
</style>
