---
const skills = [
  { name: "Power BI", level: 90 },
  { name: "Excel (VBA/Macros)", level: 95 },
  { name: "SQL (MySQL/Postgres)", level: 85 },
  { name: "Python (Pandas/Scikit-learn)", level: 75 },
  { name: "A/B Testing", level: 80 },
  { name: "Tableau", level: 70 },
  { name: "SharePoint", level: 85 },
];
---

<section id="skills" class="section">
  <h2 class="section-title">My Skills</h2>
  
  <div class="skills-grid">
    {skills.map(skill => (
      <div class="skill-item">
        <div class="skill-info">
          <span class="skill-name">{skill.name}</span>
          <span class="skill-percentage">{skill.level}%</span>
        </div>
        <div class="progress-bar-bg">
          <div class="progress-bar-fill" style={`width: ${skill.level}%`}></div>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .section {
    padding: var(--spacing-lg) 0;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-md);
  }

  .skill-item {
    margin-bottom: var(--spacing-sm);
  }

  .skill-info {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.5rem;
    font-weight: 600;
    font-size: 0.95rem;
  }

  .progress-bar-bg {
    width: 100%;
    height: 8px;
    background-color: var(--color-bg-secondary);
    border-radius: 4px;
    overflow: hidden;
  }

  .progress-bar-fill {
    height: 100%;
    background-color: var(--color-primary);
    border-radius: 4px;
    transition: width 1s ease-in-out;
  }
</style>
