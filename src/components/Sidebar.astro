<style>
  .sidebar-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    padding: var(--spacing-md);
    text-align: center;
    background: linear-gradient(rgba(26, 32, 44, 0.9), rgba(26, 32, 44, 0.9)), url('https://via.placeholder.com/600x800') no-repeat center/cover;
  }

  .profile-image img {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    border: 4px solid rgba(255, 255, 255, 0.2);
    margin-bottom: var(--spacing-sm);
    object-fit: cover;
  }

  .name {
    font-size: 2rem;
    margin-bottom: var(--spacing-xs);
    color: white;
  }

  .role {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: var(--spacing-md);
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .nav-links {
    list-style: none;
    margin-top: var(--spacing-md);
    width: 100%;
  }

  .nav-links li {
    margin-bottom: var(--spacing-sm);
  }

  .nav-links a {
    color: rgba(255, 255, 255, 0.6);
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    transition: color 0.3s ease, transform 0.3s ease;
    display: block;
  }

  .nav-links a:hover {
    color: white;
    transform: translateX(5px);
  }
  
  .social-links {
    display: flex;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-md);
  }
  
  .social-links a {
     font-size: 0.9rem;
     color: rgba(255,255,255, 0.8);
     text-decoration: underline;
  }
</style>
